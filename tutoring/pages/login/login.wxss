/* pages/login/login.wxss */
.page {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #f5f5f5;
}

.form-wrapper {
  margin-top: 30px;
  background: #fff;
}

.input-wrapper {
  height: 60px;
  width: 100%;
  padding: 10px 50px;
  box-sizing: border-box;
}

.input-wrapper input {
  width: 100%;
  height: 100%;
}

.username {
  position: relative;
  background: url("data:image/png;base64,") no-repeat 15px center;
  background-size: 20px 20px;
}
.password {
  position: relative;
  background: url("data:image/png;base64,") no-repeat 15px center;
  background-size: 20px 20px;
}

.captcha {
position: relative;
background: url("data:image/png;base64,") no-repeat 15px center;
  background-size: 20px 22px;
}

.line::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 15px;
  right: 0;
  height: 1px;
  background: #e0e0e0;
}

.input-placeholder {
  color: #c7c7cc;
}

.bottom-link {
  float: right;
  margin-top: 15px;
  font-size: 16px;
  color: #6f6f6f;
}

.link {
  display: inline-block;
  font-size: 14px;
  margin: 0 15px;
}

.clearfix {
  content: "";
  clear: both;
}

.btn-wrapper {
  margin-top: 40px;
  text-align: center;
  padding: 0 15px;
}

.btn {
  background: #9fb7d5;
  color: #fff;
  border: none;
  outline: none;
  box-shadow: none;
  letter-spacing: 1px;
}

.btn.active {
  background: #4572ae;
}

.captcha-input {
  width: 70% !important;
}

.captcha-btn {
  position: absolute;
  right: 15px;
  height: 40px;
  width: 100px;
  top: 50%;
  transform: translate(0, -50%);
  font-size: 14px;
  line-height: 40px;
  color: #5c5c5c;
}

