/* pages/order/order.wxss */
page {
  background: #f0f2f5;
}

.item {
  background: #fff;
  margin-top: 20rpx;
}

.header {
  padding: 15rpx 25rpx;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
}

.time {
  color: #999;
}

.content {
  display: flex;
  padding: 15rpx 25rpx;
  background: #f8f8f8;
  align-items: center;
}

image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.footer {
  padding: 15rpx 25rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 16px;
  line-height: 35px;
  color: #f09135;
}

button {
  font-size: 14px;
  text-align: right;
  display: flex;
  justify-content: flex-end;
  margin-right: 0;
  color: #fff;
  background: #f09135;
}