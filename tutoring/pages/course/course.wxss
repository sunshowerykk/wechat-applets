/* pages/course/course.wxss */
page {
  background: #fff;
}
.container {
  padding: 0 20rpx;
}

.text {
  padding: 5rpx 10rpx;
  line-height: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.item {
  position: relative;
  display: flex;
  color: #ccc;
  font-size: 14px;
  padding: 20rpx 0;
  border-bottom: 1px solid #ebebeb;
}
.name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}
image {
  width: 200rpx;
  height: 230rpx;
  margin-right: 20rpx;
  border-radius: 5px;
}

.item::after {
  content: "";
  display: block;
  position: absolute;
  right: 0;
  top: 50%;
  width: 20px;
  height: 20px;
  transform: translate(0, -50%);
  background: url("data:image/png;base64,") no-repeat center;
  background-size: 20px 20px;
}