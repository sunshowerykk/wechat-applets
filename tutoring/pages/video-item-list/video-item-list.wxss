/* pages/video-item-list/video-item-list.wxss */
.header {
  display: flex;
  background: rgba(0, 0, 0, 0.8);
  padding: 20rpx;
  color: #fff;
  font-size: 18px;
}

image {
  width: 200rpx;
  height: 220rpx;
  margin-right: 20px;
}

.total {
  padding: 25rpx 20rpx;
  color: #999;
  font-size: 14px;
  background: #f8f8f8;
  border-bottom: 1rpx solid #ccc;
}

.video-item {
  padding: 20rpx 20rpx;
  position: relative;
}

.video-item::after {
  position: absolute;
  content: "";
  height: 1px;
  background: #ebebeb;
  bottom: 0;
  left: 25rpx;
  right: 25rpx;
}

.video-item.active {
  padding: 20rpx 20rpx 20rpx 80rpx;
  background: url('data:image/png;base64,') no-repeat 15rpx center;
  background-size: 30px 30px;
}

.video-item.active .video-name {
  color: #ff556c;
}

.video-item.active .video-author {
  color: #ff556c;
}

.video-name {
  font-size: 18px;
  color: #2a2a2a;
  margin-bottom: 8rpx;
}

.video-author {
  font-size: 14px;
  color: #a4a4a4;
}
