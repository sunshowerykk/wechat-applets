/* pages/course-detail/course-detail.wxss */
image {
  width: 100%;
  height: 500rpx;
  vertical-align: middle
}

.des-content {
  padding: 20rpx 20rpx;
}

.table-title {
  height: 114rpx;
  box-shadow: 0 1px 5px 0 #eee;
  display: flex;
  background: #fff;
  font-weight: 500;
  font-size: 14px;
  position: relative;
  z-index: 1000;
}

.title-item {
  display: flex;
  height: 114rpx;
  line-height: 114rpx;
  margin-left: 44rpx;
  box-sizing: border-box;
  letter-spacing: 1px;
}

.title-item.active {
  color: #4572ae;
  border-bottom: 2px solid #4572ae;
}

.course-content {
  padding: 0 0 120rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  box-shadow: 0 -1px 5px 0 #ebebeb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 44rpx;
  background: #fff;
}

.footer-buy {
  color: #999999;
  font-size: 14px;
}

.footer-money {
  color: #666666;
  font-size: 18px;
}

.buy-btn {
  display: inline-block;
  background: #f88c24;
  color: #fff;
  font-size: 16px;
}

.info-text {
  color: #f88c24;
}

button {
  text-align: right;
  margin-right: 0;
}

swiper {
  min-height: 800px;
  background: #f5f5f5;
}

.content {
  padding: 50rpx 44rpx;
  background: #fff;
  margin-bottom: 15rpx;
}

.current-money {
  font-weight: 500;
  font-size: 28px;
  color: #f88c24;
}

.origin-money {
  font-size: 18px;
  color: #999999;
  text-decoration: line-through;
}

.teacher-container {
  padding: 30rpx 44rpx;
  background: #fff;
  margin-bottom: 15rpx;
}

.teader-header {
  display: flex;
  margin-bottom: 20rpx;
  height: 126rpx;
}

.teacher-title {
  font-size: 22px;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.teader-header image {
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.teacher-info {
  display: flex;
  flex-direction: column;
  justify-content: center
}

.gray-bg {
  color: #999;
}

.course-list {
  padding-bottom: 200rpx;
}

.course-list__header {
  background: #f7f9fb;
  padding: 30rpx 44rpx;
  border: 1px solid #f5f5f5;
}

.course-list__item {
  background: #fff;
  padding: 40rpx 44rpx;
}

video {
  width: 100%;
}

.course-list__item {
  font-size: 16px;
  border-bottom: 1px solid #ebebeb;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.play-btn {
  font-size: 12px;
  color: #f88c24;
  border: 1px solid #f88c24;
  background: transparent;
}