/* pages/order-confirm/order-confirm.wxss */
page {
  background: #f4f4f4;
}

.item {
  background: #fff;
  margin-top: 20rpx;
}

.header {
  padding: 10rpx 25rpx;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  line-height: 35px;
  color: #999;
}

.time {
  color: #999;
}

.content {
  display: flex;
  padding: 15rpx 25rpx;
  background: #f8f8f8;
  align-items: center;
}

image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.footer {
  padding: 15rpx 25rpx;
  display: flex;
  font-size: 18px;
  line-height: 35px;
  align-content: flex-end;
}

.btn {
  background: #f09135;
  color: #fff;
}

button {
  margin: 40px 25rpx 0;
}

.name {
  font-size: 18px;
  margin-bottom: 10px;
}

.item-count {
  font-size: 16px;
}

.red {
  color: #f09135;
}