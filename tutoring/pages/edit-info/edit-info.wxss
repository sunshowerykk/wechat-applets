/* pages/edit-info/edit-info.wxss */
.page {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #f5f5f5;
}

.item {
  background: #fff;
  padding: 5px 30px 5px 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  font-size: 16px;
  height: 60px;
  box-sizing: border-box;
  position: relative;
}

image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  vertical-align: middle
}

.item::after {
  position: absolute;
  display: inline-block;
  content: "";
  width: 20px;
  height: 20px;
  right: 5px;
  background: url('data:image/png;base64,')  no-repeat center center;
  background-size: 20px 20px;
}
