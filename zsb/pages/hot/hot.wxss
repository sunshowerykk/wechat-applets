/**index.wxss**/
page {
  background: #f5f5f5;
}
.school-container {
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}

#public {
  background: url("http://kaoben.top/uploads/img/course-category/15192022687586.png") no-repeat center;
  background-size: 20px 20px; 
}



.scroll-view_H {
  width: 100%;
  white-space: nowrap;
  vertical-align: text-top;
}
.school-container image {
  width: 75rpx;
  height: 75rpx;
  margin: 37.5rpx;
}
.scroll-view-item_H {
  width: 150rpx;
  height: 150rpx;
  margin: 0 10px;
  display: inline-block;
  border-radius: 2rpx;
}
.header {
  padding: 0 10px;
  margin-bottom: 10px;
}
.slide-image {
  width: 100%;
  height: 455rpx;
}

.bc_green {
  background: #54cea9;
}

.bc_red {
  background: red;
}

.bc_yellow {
  background: #f6ce00;
}

.bc_blue {
  background: #4caafc;
}

.school-name {
  font-size: 16px;
}

.bg_purper {
  background: #e994dc;
}

.bg_music {
  background: #e3b47b
}

.bg_wenxue {
  background: #848d99;
}

.select-list {
  background: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 10px;
}

.select-header {
  font-size: 22px;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 5rpx;
}

.more {
  font-size: 14px;
  color: #fff;
  padding: 2px 12px;
  background: #bbb;
  height: 18px;
  line-height: 18px;
  border-radius: 12px;
}

.text {
  padding: 5rpx 10rpx;
  line-height: 25px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.item {
  position: relative;
  display: flex;
  color: #ccc;
  font-size: 14px;
  padding: 20rpx 0;
  border-bottom: 1px solid #ebebeb;
}
.name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}
.select-list image {
  width: 267rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 5px;
  flex: none;
}

.item::after {
  content: "";
  display: block;
  position: absolute;
  right: 0;
  top: 50%;
  width: 20px;
  height: 20px;
  transform: translate(0, -50%);
  background: url("data:image/png;base64,") no-repeat center;
  background-size: 20px 20px;
}

swiper {
  height: 150px;
}